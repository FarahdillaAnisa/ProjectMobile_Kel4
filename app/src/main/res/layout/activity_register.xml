<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:title="Register"
        android:paddingLeft="160dp"
        app:titleTextColor="#000000" />

    <ImageView
        android:id="@+id/img_ilustrasi"
        android:layout_width="334dp"
        android:layout_height="199dp"
        android:layout_below="@+id/toolbar_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:src="@drawable/undraw_chef"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_uname"
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:layout_below="@+id/img_ilustrasi"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/user"
        app:layout_constraintStart_toStartOf="@id/img_uname" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_ilustrasi"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingBottom="20dp"
        android:layout_toEndOf="@id/img_uname">
    </EditText>

    <ImageView
        android:id="@+id/img_pass"
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:layout_below="@+id/username"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/password"
        app:layout_constraintStart_toStartOf="@id/img_pass" />
    <EditText
        android:id="@+id/epassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_marginTop="11dp"
        android:layout_marginRight="20dp"
        android:drawablePadding="10dp"
        android:paddingBottom="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_toEndOf="@id/img_pass"/>
    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/epassword"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="#F1C40F"
        android:enabled="true"/>

    <TextView
        android:id="@+id/textlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_button"
        android:layout_marginStart="20dp"
        android:layout_marginTop="34dp"
        android:text="You Already Have an Account."
        android:textSize="16sp" />

    <Button
        android:id="@+id/googlesigninbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_button"
        android:layout_marginStart="19dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/textlogin"
        android:background="@drawable/roundedbutton"
        android:padding="5dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="16sp" />
</RelativeLayout>